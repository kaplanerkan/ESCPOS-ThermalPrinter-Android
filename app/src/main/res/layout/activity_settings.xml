<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SettingsActivity">

    <!-- Connection Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connection"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <RadioGroup
            android:id="@+id/radioGroupConnection"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioBluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BT SPP"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radioBluetoothLe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLE"/>

            <RadioButton
                android:id="@+id/radioUsb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USB"/>

            <RadioButton
                android:id="@+id/radioTcp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TCP"/>
        </RadioGroup>
    </LinearLayout>

    <!-- Bluetooth Selection -->
    <LinearLayout
        android:id="@+id/layoutBluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnSelectBluetooth"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Select Bluetooth Printer"/>
    </LinearLayout>

    <!-- BLE Selection -->
    <LinearLayout
        android:id="@+id/layoutBle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnScanBle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Scan BLE Printers"/>

            <Button
                android:id="@+id/btnStopBleScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtBleScanStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap 'Scan' to find BLE printers"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>

        <Spinner
            android:id="@+id/spinnerBleDevices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- TCP Settings -->
    <LinearLayout
        android:id="@+id/layoutTcp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/editTcpIp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="IP Address"
            android:inputType="text"/>

        <EditText
            android:id="@+id/editTcpPort"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Port"
            android:text="9100"
            android:inputType="number"/>
    </LinearLayout>

    <!-- Printer Configuration (inline) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DPI:"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/editDpi"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="203"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Width:"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/editWidthMm"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="48"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mm  Chars:"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/editCharsPerLine"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="32"
            android:inputType="number"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/txtConnectionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Disconnected"
        android:textColor="#FF5722"
        android:layout_marginBottom="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="16dp"/>

    <!-- Test Categories Section (visible after connection) -->
    <LinearLayout
        android:id="@+id/layoutTestCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Printer Tests"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <!-- Row 1: Paper/Cash and Text Format -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnCategoryPaper"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Paper &amp; Cash Box"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btnCategoryText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Text Formatting"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Row 2: Barcode/QR and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnCategoryBarcode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Barcode &amp; QR"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btnCategoryStatus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Printer Status"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Row 3: Raw Commands -->
        <Button
            android:id="@+id/btnCategoryRaw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raw ESC/POS Commands"
            android:layout_marginBottom="16dp"/>

        <!-- Full Test Print -->
        <Button
            android:id="@+id/btnFullTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FULL TEST PRINT"
            android:textStyle="bold"
            android:background="#4CAF50"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <!-- Hidden views for ViewBinding compatibility (used in dialogs) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone">

        <!-- These are placeholders for ViewBinding - actual views are in dialogs -->
        <SeekBar android:id="@+id/seekCutFeed" android:layout_width="0dp" android:layout_height="0dp"/>
        <TextView android:id="@+id/txtCutFeedValue" android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnPartialCut" android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnFullCut" android:layout_width="0dp" android:layout_height="0dp"/>
        <CheckBox android:id="@+id/chkCashBoxEnabled" android:layout_width="0dp" android:layout_height="0dp"/>
        <Spinner android:id="@+id/spinnerCashBoxPin" android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnOpenCashBox" android:layout_width="0dp" android:layout_height="0dp"/>
        <SeekBar android:id="@+id/seekLineSpacing" android:layout_width="0dp" android:layout_height="0dp"/>
        <TextView android:id="@+id/txtLineSpacingValue" android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnResetLineSpacing" android:layout_width="0dp" android:layout_height="0dp"/>
        <SeekBar android:id="@+id/seekImageDelay" android:layout_width="0dp" android:layout_height="0dp"/>
        <TextView android:id="@+id/txtImageDelayValue" android:layout_width="0dp" android:layout_height="0dp"/>
        <CheckBox android:id="@+id/chkUseEscAsterisk" android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnAlignLeft" android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnAlignCenter" android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnAlignRight" android:layout_width="0dp" android:layout_height="0dp"/>
        <Spinner android:id="@+id/spinnerFontSize" android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnFontA" android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnFontB" android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnFontC" android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnFontD" android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnFontE" android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnBold" android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnUnderline" android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnStrikethrough" android:layout_width="0dp" android:layout_height="0dp"/>
        <EditText android:id="@+id/editCustomText" android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnPrintCustomText" android:layout_width="0dp" android:layout_height="0dp"/>
        <EditText android:id="@+id/editBarcodeData" android:layout_width="0dp" android:layout_height="0dp"/>
        <Spinner android:id="@+id/spinnerBarcodeType" android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnPrintBarcode" android:layout_width="0dp" android:layout_height="0dp"/>
        <EditText android:id="@+id/editQrData" android:layout_width="0dp" android:layout_height="0dp"/>
        <EditText android:id="@+id/editQrSize" android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnPrintQr" android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnQueryStatus" android:layout_width="0dp" android:layout_height="0dp"/>
        <TextView android:id="@+id/txtPrinterStatus" android:layout_width="0dp" android:layout_height="0dp"/>
        <EditText android:id="@+id/editRawHex" android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnSendRaw" android:layout_width="0dp" android:layout_height="0dp"/>
    </LinearLayout>

</LinearLayout>
