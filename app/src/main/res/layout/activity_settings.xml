<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Connection Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connection"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <RadioGroup
                android:id="@+id/radioGroupConnection"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioBluetooth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bluetooth"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/radioUsb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USB"/>

                <RadioButton
                    android:id="@+id/radioTcp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TCP"/>
            </RadioGroup>
        </LinearLayout>

        <!-- Bluetooth Selection -->
        <LinearLayout
            android:id="@+id/layoutBluetooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnSelectBluetooth"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Select Bluetooth Printer"/>
        </LinearLayout>

        <!-- TCP Settings -->
        <LinearLayout
            android:id="@+id/layoutTcp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/editTcpIp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:hint="IP Address"
                android:inputType="text"/>

            <EditText
                android:id="@+id/editTcpPort"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Port"
                android:text="9100"
                android:inputType="number"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/txtConnectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Disconnected"
            android:textColor="#FF5722"
            android:layout_marginBottom="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp"/>

        <!-- Printer Configuration Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Printer Configuration"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="DPI:"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/editDpi"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="203"
                android:inputType="number"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Width (mm):"
                android:gravity="center_vertical"
                android:layout_marginStart="16dp"/>

            <EditText
                android:id="@+id/editWidthMm"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="48"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Chars/Line:"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/editCharsPerLine"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="32"
                android:inputType="number"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp"/>

        <!-- Print Tests Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Print Tests"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <!-- Paper Cut -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Paper Cut Feed (dots):"
                android:gravity="center_vertical"/>

            <SeekBar
                android:id="@+id/seekCutFeed"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="65"/>

            <TextView
                android:id="@+id/txtCutFeedValue"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="65"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnPartialCut"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Partial Cut"/>

            <Button
                android:id="@+id/btnFullCut"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Full Cut"/>
        </LinearLayout>

        <!-- Cash Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <CheckBox
                android:id="@+id/chkCashBoxEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash Box Enabled"
                android:checked="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Pin:"
                android:layout_marginStart="16dp"/>

            <Spinner
                android:id="@+id/spinnerCashBoxPin"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnOpenCashBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open"/>
        </LinearLayout>

        <!-- Line Spacing -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Line Spacing (dots):"
                android:gravity="center_vertical"/>

            <SeekBar
                android:id="@+id/seekLineSpacing"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="30"/>

            <TextView
                android:id="@+id/txtLineSpacingValue"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="30"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnResetLineSpacing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"/>
        </LinearLayout>

        <!-- Image Processing Delay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Image Delay (ms/line):"
                android:gravity="center_vertical"/>

            <SeekBar
                android:id="@+id/seekImageDelay"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:max="50"
                android:progress="5"/>

            <TextView
                android:id="@+id/txtImageDelayValue"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:gravity="center"/>
        </LinearLayout>

        <!-- ESC * Command -->
        <CheckBox
            android:id="@+id/chkUseEscAsterisk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use ESC * Command for Images"
            android:layout_marginBottom="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp"/>

        <!-- Text Format Tests Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text Format Tests"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <!-- Alignment -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnAlignLeft"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="[L] Left"/>

            <Button
                android:id="@+id/btnAlignCenter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="[C] Center"/>

            <Button
                android:id="@+id/btnAlignRight"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="[R] Right"/>
        </LinearLayout>

        <!-- Font Size -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Font Size:"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinnerFontSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <!-- Font Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Font Type:"/>

            <Button
                android:id="@+id/btnFontA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"/>

            <Button
                android:id="@+id/btnFontB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"/>

            <Button
                android:id="@+id/btnFontC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"/>

            <Button
                android:id="@+id/btnFontD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"/>

            <Button
                android:id="@+id/btnFontE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E"/>
        </LinearLayout>

        <!-- Text Styles -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnBold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Bold"/>

            <Button
                android:id="@+id/btnUnderline"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Underline"/>

            <Button
                android:id="@+id/btnStrikethrough"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Strike"/>
        </LinearLayout>

        <!-- Custom Text -->
        <EditText
            android:id="@+id/editCustomText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter custom text to print"
            android:text="Test Print - ESCPOS Library"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnPrintCustomText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Print Custom Text"
            android:layout_marginBottom="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp"/>

        <!-- Barcode/QR Tests Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Barcode / QR Code Tests"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/editBarcodeData"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Barcode Data"
                android:text="123456789012"/>

            <Spinner
                android:id="@+id/spinnerBarcodeType"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnPrintBarcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Print Barcode"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/editQrData"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="QR Code Data"
                android:text="https://github.com/kaplanerkan/ESCPOS-ThermalPrinter-Android"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size:"/>

            <EditText
                android:id="@+id/editQrSize"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="20"
                android:inputType="number"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnPrintQr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Print QR Code"
            android:layout_marginBottom="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp"/>

        <!-- Printer Status Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Printer Status"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnQueryStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Query Printer Status"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/txtPrinterStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Unknown"
            android:padding="8dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp"/>

        <!-- Raw Commands Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raw ESC/POS Commands"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editRawHex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hex: 1B 40 (Reset) or 1B 61 01 (Center)"
            android:text="1B 40"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnSendRaw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Raw Command"
            android:layout_marginBottom="16dp"/>

        <!-- Full Test Print -->
        <Button
            android:id="@+id/btnFullTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FULL TEST PRINT"
            android:textStyle="bold"
            android:background="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>
</ScrollView>
